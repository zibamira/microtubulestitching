set PACKAGE {hxalignmicrotubules}
set LABELS {spatialgraph}

set LIBS {
    pointmatching
    hxspatialgraph
    hxneuroneditor
    hxcore
    amiramesh
    mclib
    qt
    oiv
    tcl
    opengl
    hxfield
    hxlines
    dai
    hxtemplatematchingutil
    hxlandmark
    mcla
    openmp
    ipopt
    mpirxx
    mpir
}

# The tests use testing data from hxalignspatialgraph.
set DEPENDS {
    hxalignspatialgraph
}

# `WINDOWS` is required for libdai
set DEFINES-Win {
    WINDOWS
    HAVE_CONFIG_H
}

# Required for libdai
set DEFINES-MacX {
    MACOSX
}

set SRC {
    *.cpp
    mtalign/*.cpp
}

set INCSRC {
    *.h
    mtalign/*.h
}

# Exclude attic for Amira 5 builds,  because old init.cpp does not work with
# subdirs.
if { [passLabelFilter apiAmiraGreater5] } {
  append SRC {
    attic/*.cpp
    examples/*.cpp
  }
  append INCSRC {
    attic/*.h
  }
}

set SHARE {
    share/script-objects/*.scro
    share/resources/hxalignmicrotubules.rc
}

if { [passLabelFilter apiAmiraGreater5] } {
  append LIBS {
    hxspreadsheet
  }
} else {
  append LIBS {
    hxstatistics
  }

  set DEFINES {
    HX_AMIRA5_COMPAT
  }
}


set TESTLIBS {
    gtest
    hxgtest
}

set TESTSRC {
    *Test.cpp
    hxtesting.cpp
    mtalign/*Test.cpp
}

set TESTINCSRC {
    hxtesting.h
}

set TESTSHARE {
    share/resources/test_hxalignmicrotubules.rc
}
